<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/roundcornerpopuphelp"
    android:padding="12dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/roundcornerclose"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/textVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="4sp"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/colorPrimaryButton"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Modalidad de juego"
        android:textColor="@color/colorPrimaryButton"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="El juego se basa en una serie de rondas determinadas por el usuario. En cada ronda, los equipos tendrÃ¡n un tiempo para adivinar la mayor cantidad de palabras. Cada palabra representa un punto."
        />

</LinearLayout>